<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/ggsj_callout_width"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/ll_state"
        android:layout_width="@dimen/ggsj_callout_width"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/bt_move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:contentDescription="移动"
            android:src="@drawable/callout_move" />

        <ImageView
            android:id="@+id/bt_bind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:contentDescription="绑定"
            android:src="@drawable/callout_bind"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_lx"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/bt_bind"
            android:layout_toRightOf="@+id/bt_move"
            android:gravity="center"
            android:text="类型"
            android:textColor="@color/red"
            android:textSize="@dimen/contnet_text_normal" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:contentDescription="分割线"
        android:src="@drawable/callout_divider" />

    <LinearLayout
        android:id="@+id/ll_mc"
        android:layout_width="match_parent"
        android:layout_height="35dp" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="名称："
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_mc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/contnet_text_small"
            tools:ignore="SelectableText" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_dz"
        android:layout_width="match_parent"
        android:layout_height="35dp" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="地址："
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_dz"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/contnet_text_small"
            tools:ignore="SelectableText" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_cjsj"
        android:layout_width="match_parent"
        android:layout_height="35dp" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="时间："
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_cjsj"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/contnet_text_small"
            tools:ignore="SelectableText" />
    </LinearLayout>

</LinearLayout>